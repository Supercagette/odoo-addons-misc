<templates id="template" xml:space="preserve">

    <t t-name="TareScreenWidget">
        <div class="scale-screen screen">
            <header><h2><t t-esc="widget.get_product_name()" /></h2></header>
            <div class="display pos-tare-container">
                <div class="header">
                    <span class="left-block">Gross Weight</span>
                    <input id="gross-weight" placeholder="Gross Weight" class="right-block"/>
                </div>
                <div class="header">
                    <span class="left-block">Tare</span>
                    <input id="tare-weight" placeholder="Tare" class="right-block"/>
                </div>
                <div class="header">
                    <span class="left-block">Net Weight</span>
                    <span id="net-weight" class="right-block"></span>
                </div>
                <div class="header">
                    <span class="left-block">Total Price</span>
                    <span id="total-price" class="right-block"></span>
                </div>
            </div>
        </div>
    </t>

</templates>

