<openerp>
    <data>

<!-- Model: stock.picking -->
        <record id="view_stock_picking_form" model="ir.ui.view">
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="sale_stock.stock_picking_out_inherit_sale" />
            <field name="arch" type="xml">
                <field name="sale_id" position="after">
                    <group>
                        <field name="moment_id" groups="sale_recovery_moment.recovery_user"/>
                        <field name="group_id" groups="sale_recovery_moment.recovery_user"/>
                    </group>
                </field>
            </field>
        </record>

        <record id="view_stock_picking_out_view" model="ir.ui.view">
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="moment_id" groups="sale_recovery_moment.recovery_user"/>
                    <field name="group_id" groups="sale_recovery_moment.recovery_user"/>
                </field>
            </field>
        </record>

        <record id="view_stock_picking_out_search" model="ir.ui.view">
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_search"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="moment_id" groups="sale_recovery_moment.recovery_user"/>
                    <field name="group_id" groups="sale_recovery_moment.recovery_user"/>
                </field>
                <xpath expr="//filter[@string='Status']" position="after">
                    <filter string="Recovery Moment" domain="[]" context="{'group_by':'moment_id'}"/>
                </xpath>
            </field>
        </record>


<!-- Model: sale.recovery.moment.group.wizard.duplicate -->
        <record id="view_sale_recovery_moment_group_wizard_duplicate_form" model="ir.ui.view">
              <field name="model">sale.recovery.moment.group.wizard.duplicate</field>
            <field name="arch" type="xml">
                <form string="Duplicate Group" version="7.0">
                    <group col="4">
                        <field name="group_id" colspan="4"/>
                        <field name="short_name"/>
                        <field name="day_delay"/>
                    </group>
                    <footer>
                        <button name="duplicate_group" string="Duplicate" type="object" class="oe_highlight"/>
                        <label string="or"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

<!-- Model: sale.recovery.moment.group.wizard.product.list -->
        <record id="view_sale_recovery_moment_group_wizard_product_list_form" model="ir.ui.view">
              <field name="model">sale.recovery.moment.group.wizard.product.list</field>
              <field name="arch" type="xml">
                <form string="Products List">
                    <group colspan="4">
                            <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                            <button name="%(report_moment_group_report)d" string="Print" type="action" icon="gtk-print"/>
                    </group>
                    <group colspan="4">
                        <field name="line_ids" colspan="4">
                            <tree string="Products" editable="top">
                                <field name="product_id"/>
                                <field name="confirmed_qty"/>
                                <field name="qty_available"/>
                                <field name="incoming_qty"/>
                                <field name="outgoing_qty"/>
                            </tree>
                        </field>
                    </group>

                </form>
              </field>
        </record>
    </data>
</openerp>
