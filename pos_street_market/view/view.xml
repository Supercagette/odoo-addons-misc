<openerp>
    <data>

        <!-- Model : market.place -->
        <record id="view_market_place_tree" model="ir.ui.view">
            <field name="model">market.place</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="view_market_place_form" model="ir.ui.view">
            <field name="model">market.place</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="code" string="Code"/>
                            </div>
                            <h1>
                                <field name="code"/>
                            </h1>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Model : pos.order -->
        <record id="view_pos_order_search" model="ir.ui.view">
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="market_place_id" groups="pos_street_market.res_group_street_market_manager"/>
                </field>
                <xpath expr="//filter[@string='Posted']" position="after">
                    <filter string="With Market Place" domain="[('market_place_id','!=',False)]"
                        groups="pos_street_market.res_group_street_market_manager"/>
                    <filter string="Without Market Place" domain="[('market_place_id','=',False)]"
                        groups="pos_street_market.res_group_street_market_manager"/>
                </xpath>
                                    
                <xpath expr="//filter[@string='Salesman']" position="after">
                    <filter string="Market Place" domain="[]" context="{'group_by':'market_place_id'}"
                        groups="pos_street_market.res_group_street_market_manager"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_order_tree" model="ir.ui.view">
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="market_place_id" groups="pos_street_market.res_group_street_market_manager"/>
                </field>
            </field>
        </record>

        <record id="view_pos_order_form" model="ir.ui.view">
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
            <field name="arch" type="xml">
                <field name="date_order" position="attributes">
                    <attribute name="readonly">True</attribute>
                </field>
                <field name="partner_id" position="after">
                    <field name="market_place_id" 
                        options="{'quick_create':false}"
                        groups="pos_street_market.res_group_street_market_manager"/>
                </field>
            </field>
        </record>

        <record id="view_pos_order_street_market_form" model="ir.ui.view">
                <field name="model">pos.order</field>
            <field name="inherit_id" ref="view_pos_order_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('pos_street_market.res_group_street_market_manager') ])]"/>
            <field name="arch" type="xml">
                <field name='date_order' position="attributes">
                    <attribute name="readonly">False</attribute>
                    <attribute name="attrs">{'readonly' : [('state', 'not in', ('draft','paid',))]}</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>


