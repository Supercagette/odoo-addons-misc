<openerp>
    <data>
<!-- Model: sale.order.duplication.wizard -->
        <record id="view_sale_order_mass_action_wizard_form" model="ir.ui.view">
            <field name="model">sale.order.duplication.wizard</field>
            <field name="arch" type="xml">
            <form string="Duplicate Selected Quotation or Sale Order" version="7.0">
                <group col="2">
                    <field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="begin_date" on_change="onchange_duplication_settings(begin_date, duplication_type, duplication_duration)"/>
                    <field name="duplication_type" on_change="onchange_duplication_settings(begin_date, duplication_type, duplication_duration)"/>
                    <field name="duplication_duration" on_change="onchange_duplication_settings(begin_date, duplication_type, duplication_duration)"/>
                    <field name="line_ids" nolabel="1" colspan="2">
                        <tree string="New Dates" editable="bottom">
                            <field name="date" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="duplicate_button" string="Duplicate" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>

    </data>
</openerp>
